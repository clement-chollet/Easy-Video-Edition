<Window x:Class="EasyVideoEdition.Model.SubtitlesWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyVideoEdition.Model"
        mc:Ignorable="d"
        Title="Subtitles" Height="300" Width="300">
    <Grid>
        <Button x:Name="buttonAddSub" Content="Add subtitle" HorizontalAlignment="Left" Margin="10,102,0,0" VerticalAlignment="Top" Width="120" Click="buttonAddSub_Click"/>
        <TextBox x:Name="textBoxStart" HorizontalAlignment="Left" Height="23" Margin="10,18,0,0" TextWrapping="Wrap" Text="00:00:00,000" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxEnd" HorizontalAlignment="Left" Height="23" Margin="10,46,0,0" TextWrapping="Wrap" Text="00:00:00,000" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxText" HorizontalAlignment="Left" Height="23" Margin="10,74,0,0" TextWrapping="Wrap" Text="Text" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="buttonCreateFile" Content="Create SRT" HorizontalAlignment="Left" Margin="98,202,0,0" VerticalAlignment="Top" Width="75" Click="buttonCreateFile_Click"/>

    </Grid>
</Window>
